{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off"
    },
    "overrides": [
        {
            "files": ["bin/*.js", "src/*.js"],
            "excludedFiles": "node_modules/*.js"
        }
    ]
}